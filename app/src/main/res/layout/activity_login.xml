<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <include
        layout="@layout/appbar_new"
        android:id="@+id/log_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_below="@id/log_toolbar"
        android:layout_marginTop="15dp"
        android:id="@+id/linear"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in to your account"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Email"
            android:imeActionLabel="Email"
            android:id="@+id/email_input_log"
            android:inputType="textEmailAddress"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeActionLabel="Password"
            android:layout_marginTop="15dp"
            android:hint="Pasword"
            android:id="@+id/pass_input_log"
            android:soundEffectsEnabled="true"
            android:inputType="textPassword"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signin_btn"
            android:textColor="#ffffff"
            android:background="@drawable/button_design"
            android:layout_marginTop="30dp"
            android:text="Sign In"
            android:textStyle="bold"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:id="@+id/need_account"
        android:text="Need a new account ?"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:id="@+id/reset"
        android:text="Forgot password ?"
        android:layout_marginTop="20dp"
        android:layout_below="@id/need_account"
        android:layout_alignParentRight="true" />

</RelativeLayout>
