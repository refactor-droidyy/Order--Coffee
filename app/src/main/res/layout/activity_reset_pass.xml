<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassActivity">

    <include
        layout="@layout/appbar_new"
        android:id="@+id/forget"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_below="@id/forget"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/reset"
            android:text="You Will Recieve Request Verification On This Email"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Email"
            android:imeActionLabel="Email"
            android:id="@+id/email_input_forgot"
            android:inputType="textEmailAddress"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendpass_btn"
            android:textColor="#ffffff"
            android:background="@drawable/button_design"
            android:layout_marginTop="30dp"
            android:text="Send"
            android:textStyle="bold"/>

    </LinearLayout>


</RelativeLayout>